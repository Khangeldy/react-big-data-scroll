{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": true }],
    "no-mixed-spaces-and-tabs": "error",
    "camelcase": ["error", { "properties": "never" }],
    "no-console": "error",
    "no-alert": "error",
    "no-implicit-globals": "error"
  }
}
